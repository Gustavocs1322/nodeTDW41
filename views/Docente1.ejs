<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaz Docente</title>
    <link rel="stylesheet" href="Docente.css">
</head>
<body>
    <header>
        <div class="header-container">
            <h1>Bienvenido Docente</h1>
            <!-- Menú de Usuario -->
            <div class="user-profile" id="user-profile">
                <img src="profile.jpg" alt="Foto de perfil" class="profile-pic">
                <div class="user-menu" id="user-menu">
                    <ul>
                        <li><a href="#" id="logout-btn">Cerrar sesión</a></li>
                        <li><a href="#">Ajustes</a></li>
                        <li><a href="#">Acerca de</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Menú de navegación -->
        <nav>
            <ul>
                <li><a href="#" id="inicio">Inicio</a></li>
                <li><a href="#" id="adjuntar-actividad">Adjuntar actividad al alumno</a>
                    <div class="dropdown" id="dropdown-actividad">
                        <button id="btn-adjuntar">Adjuntar</button>
                    </div>
                </li>
                <li><a href="#" id="ver-actividades">Ver actividades asignadas</a>
                    <div class="dropdown" id="dropdown-actividades">
                        <ul id="actividades-list">
                            <!-- Las actividades asignadas aparecerán aquí -->
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- Sección para adjuntar actividad al alumno -->
        <section id="instrucciones" style="display: none;">
            <h3>Adjuntar nueva actividad</h3>

            <!-- Campo para instrucciones -->
            <label for="textarea-instrucciones">Instrucciones:</label>
            <textarea id="textarea-instrucciones" placeholder="Escribe las instrucciones de la actividad"></textarea>

            <!-- Campo para asignatura -->
            <label for="asignatura">Asignatura:</label>
            <input type="text" id="asignatura" placeholder="Nombre de la asignatura">

            <!-- Campo para fecha de entrega -->
            <label for="fecha-entrega">Fecha de entrega:</label>
            <input type="date" id="fecha-entrega">

            <button id="subir-actividad">Subir actividad</button>
        </section>

        <!-- Sección para actividades asignadas -->
        <section id="actividades" style="display: none;">
            <h3>Actividades Asignadas</h3>
            <ul id="actividades-list">
                <!-- Aquí aparecerán las actividades asignadas dinámicamente -->
            </ul>
        </section>
    </main>

    <script src="Docente.js"></script>
</body>
</html>

